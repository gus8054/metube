extends base 

block content 
    if errorMessage 
        span=errorMessage
    form(method="post") 
        input(type="password", name="currentPassword", placeholder="현재 비밀번호")
        input(type="password", name="updatedPassword", placeholder="새 비밀번호")
        input(type="password", name="updatedPasswordConfirmation", placeholder="새 비밀번호 확인")
        input(type="submit", value="비밀번호 변경")