extends base  

block content 
    if errorMessage
        span=errorMessage
    form(method="post") 
        input(type="text", name="username", placeholder="Id", required, minlength="1", maxlength="20")
        input(type="email", name="email", placeholder="Email", required)
        input(type="text", name="name", placeholder="name", required, minlength="1", maxlength="20")
        input(type="password", name="password", placeholder="password", required)
        input(type="password", name="passwordConfirmation", placeholder="confirm password", required)
        input(type="submit", value="Join Us")