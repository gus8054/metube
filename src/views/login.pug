extends base 

block content 
    if errorMessage
        span=errorMessage
    form(method="post") 
        input(type="text", name="username", placeholder="Id", minlength="1", maxlength="20", required)
        input(type="password", name="password", placeholder="password", required)
        input(type="submit", value="Log In")
    div 
        a(href="/users/start") Github Login &rarr;